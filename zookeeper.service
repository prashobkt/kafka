[Unit]
Description=Zookeeper
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=simple
ExecStart=/home/user/programs/kafka_2.12-3.1.0/bin/zookeeper-server-start.sh /home/user/programs/kafka_2.12-3.1.0/config/zookeeper.properties
ExecStop=/home/user/programs/kafka_2.12-3.1.0/bin/zookeeper-server-stop.sh

[Install]
WantedBy=multi-user.target
